                    <form action="/tasks/<%= task.id %>/toggle" method="POST" style="display: inline;">
                      <button type="submit" class="task-action complete">
                        <!-- <%= task.completed ? '‚Ü∂' : '‚úì' %> -->
                      </button>
                    </form>
